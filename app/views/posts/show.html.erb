<div class="span8">
  <h1>
    <%= @post.title %> 
  </h1>
  <h6><%= @post.created_at.strftime("Posted on %Y-%m-%d") %></h6>
  <p></p>
  <p>
  <%= @post.content %> 
  </p>
  <table class="span8" align="right">
  	<tr>
      <td class="span6"></td>
  		<td><%= button_to "编辑文章", edit_post_path(@post), :class => "btn btn-primary", :method => "get" %></td>
  		<td><%= button_to "删除文章", post_path(@post), :class => "btn btn-danger", :method => "delete" %></td>
  	</tr>
  </table>
</div>
